<%- include('../view/head.ejs')-%>
    <style>
        .select,
        #locale {
            width: 100%;
        }
        
        .like {
            margin-right: 10px;
        }
    </style>

    <div class="col-md-12" style="float:right;padding-top:10px;">
        <label><%= products.length + ' PRODUTO(s) ENCONTRADO(s)' %></label>
    </div>
    <section class="panel panel-default">
        <div class="panel-body">

            <table id="products" class="table table-bordered" style='width:80%;margin-left:auto;margin-right:auto;'>
                <!--
                  <thead>
                      <tr>
                          <th class="text-center">...</th>
                          <th class="text-center">Descricao</th>
                          <th class="text-center">Preco</th>
                      </tr>
                  </thead>
                -->
                <tbody>
                    <% products.forEach(function(product){ %>
                        <tr>
                            <td style='width:20%'>
                                <% if( product.image1 != "" ) { %>
                                    <img src="<%= product.image1 %>" style="width:60px;height:60px;" />
                                    <% } %>
                                        <% if( product.image2 != "" ) { %>
                                            <img src="<%= product.image2 %>" style="width:60px;height:60px;" />
                                            <% } %>
                                                <% if( product.image3 != "" ) { %>
                                                    <img src="<%= product.image3 %>" style="width:60px;height:60px;" />
                                                    <% } %>
                                                        <% if( product.image4 != "" ) { %>
                                                            <img src="<%= product.image4 %>" style="width:60px;height:60px;" />
                                                            <% } %>
                            </td>
                            <td style='width:60%'>
                                <b><%= product.shortName %></b><br>
                                <%= product.description %>
                            </td>
                            <td style='width:20%'>
                                R$
                                <%= product.price %>
                                    <% if( product.discount != "0,00" ) { %>
                                        <%= 'por R$ ' + product.discount %>
                                            <% } %>
                            </td>
                        </tr>
                        <% })%>
                </tbody>
            </table>
        </div>
    </section>

    <script>
        $(function() {
            initTable()

            $('#products').change(initTable)
        })
    </script>

    <%- include('../view/foot.ejs')-%>